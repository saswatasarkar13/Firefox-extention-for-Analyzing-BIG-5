{
  "manifest_version": 2,
  "name": "BIG 5",
  "version": "1.0.0",
  "description": "Copy tweet text by clicking a button. Simple.",
  "icons": {
    "48": "icon.png",
    "96": "icon.png"
  },
  "permissions": ["contextMenus", "tabs", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "BIG 5",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["icon.png"]
}
